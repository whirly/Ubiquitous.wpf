<Window x:Class="Ubiquitous.UbiquitousWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ubiquitous Sound" Height="409" Width="594">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Name="labelReceiver"></Label>
        <GridSplitter HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Column="1" Width="5"/>
        <Label Grid.Column="2" Name="labelEmitter"></Label>        
    </Grid>
</Window>
